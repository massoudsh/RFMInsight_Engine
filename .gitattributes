# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Jupyter notebooks
*.ipynb text eol=lf

# Markdown files
*.md text eol=lf

# CSV files
*.csv text eol=lf

# JSON files
*.json text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Large files (should use Git LFS)
*.csv filter=lfs diff=lfs merge=lfs -text
*.xlsx filter=lfs diff=lfs merge=lfs -text
*.parquet filter=lfs diff=lfs merge=lfs -text
